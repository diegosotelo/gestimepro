<h1>Listing tareas</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Inicio</th>
    <th>Termino</th>
    <th>Total</th>
    <th>Proyecto</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tareas.each do |tarea| %>
  <tr>
    <td><%= tarea.nombre %></td>
    <td><%= tarea.descripcion.truncate(30) %></td>
    <td><%= tarea.inicio.strftime("%d-%m-%Y %H:%M") %></td>
    <td><%= tarea.termino.strftime("%H:%M") %></td>
    <td><%= tarea.total %></td>
    <td><%= tarea.proyecto.nombre   %></td>
    <td><%= link_to 'Show', tarea %></td>
    <td><%= link_to 'Edit', edit_tarea_path(tarea) %></td>
    <td><% link_to 'Destroy', tarea, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

